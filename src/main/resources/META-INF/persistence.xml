<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="javaee6" transaction-type="JTA">
		<jta-data-source>jdbc/javaee6</jta-data-source>
		<!-- mapping-file>META-INF/orm.xml</mapping-file -->
		<class>javaee6.domain.library.Author</class>
		<class>javaee6.domain.library.Book</class>
		<class>javaee6.domain.library.User</class>
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
		</properties>
	</persistence-unit>
</persistence>
